<%= render 'header' %>

<header id="content-header">
  <h1  style="text-align: center;"> Log In</h1>
</header>

<br>

<div style="padding-left: 25%; padding-right: 25%;">
<%= form_tag(session_path) do %>

    <fieldset class="required">
      <div class="form-group">
    <label for="email" class="sr-only">Email</label>
      <input type="email" name="email" id="email" class="form-control" placeholder="somebody@example.com">
      </div>
      <div class="form-group">
    <label for="key" class="sr-only">Password</label>
      <input type="password" name="password" id="password" class="form-control" placeholder="Password">
      </div>
<input type="submit" id="btn-login" class="btn btn-custom btn-md btn-block" value="GO" style="
    color: white;
    background-color: rgb(0, 202, 0);
"> </fieldset>
<% end %>
<p style="padding-top: 10px;">
<a href="javascript:;" class="forget" data-toggle="modal" data-target=".forget-modal">Forgot your password?</a>
</p>
<p><%= link_to "forgotten password rails?", new_password_reset_path %></p>
<div class="field">
</div>
</div>



<div class="modal fade forget-modal" tabindex="-1" role="dialog" aria-labelledby="myForgetModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-sm">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">
          <span aria-hidden="true">Ã—</span>
          <span class="sr-only">Close</span>
        </button>
        <h4 class="modal-title">Recovery password</h4>
      </div>
      <div class="modal-body">
        <p>Type your email account</p>
            <input type="email" name="email" id="email" class="form-control" placeholder="somebody@example.com" style="margin-right: 64px;">
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
        <button type="button" class="btn btn-custom">Recovery</button>
      </div>
    </div> <!-- /.modal-content -->
  </div> <!-- /.modal-dialog -->
</div> <!-- /.modal -->