<%= render 'header' %>

<header id="content-header">
  <h1  style="text-align: center;"> Log In</h1>
</header>

<br>

<div style="padding-left: 25%; padding-right: 25%;">
<%= form_tag(session_path) do %>

    <fieldset class="required">
      <div class="form-group">
    <label for="email" class="sr-only">Email</label>
      <input type="email" name="email" id="email" class="form-control" placeholder="somebody@example.com">
      </div>
      <div class="form-group">
    <label for="key" class="sr-only">Password</label>
      <input type="password" name="password" id="password" class="form-control" placeholder="Password">
      </div>
<input type="submit" id="btn-login" class="btn btn-custom btn-md btn-block" value="GO" style="
    color: white;
    background-color: rgb(0, 202, 0);
"> </fieldset>
<% end %>
<p style="padding-top: 10px;">
<%= link_to "Forgot your password?", new_password_reset_path %>
</p>
<div class="field">
</div>
<%= link_to "/auth/facebook", id: "sign_in" do %>
<img alt="Facebook_Login" src="/assets/Facebook_Login.png" 
style="width: 200px;
position: absolute;
margin: auto;          
right: 0;
left: 0;
top: 270px;
padding-top: 60px">
<% end %>

</div>
