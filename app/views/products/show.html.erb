<%= content_for(:title, @product.name) %> 



<article>



  <header>


    <h1 style="text-align: center; font-size: 18px; border-radius: 6px; height: 38px; width: 80%; padding-top: 9px; margin-left: 10%; background-color: rgb(81, 81, 81);color: white;"> <%= @product.name %>  
    <p>
     <% if current_user_admin? %> 
      <%= link_to "Edit", edit_product_path(@product) %> </h1> 
    </p>
     <% end %>
  </header>

    <div class="container">
    <div class="row">
       <div class="col-md-4 thumb" style="padding-bottom: 0px;margin-left: 20px;margin-top: 20px;">
<div style="font-size: 17px; padding-top: 11px; height: 43px; border-radius: 20px; background-color: rgb(167, 205, 249);color: black; text-align: center; position: absolute; z-index: 2; margin-top: 138px; width: 200px;">
     <%= format_releasing_on(@product) %> - <span style="color: red;"> <%= format_releasing_on_remaining(@product) %> </span>  </div>
        <div class="thumbnail" style="position: absolute; border-radius: 50%;width: 170px; box-shadow: 0 0 0 5px rgb(81, 81, 81); margin-top: 5px;margin-left: 15px;"> 

       <img class="img-responsive"> <%= image_for(@product) %>
</div> 


<div id="showclock" style="position: absolute; padding-left:85px; padding-top: 196px; z-index: 3;"> 
    <% if current_user %>
    <% if @current_clock %> 
<%= render 'products/unclock' %>
    <% else %>
<%= render 'products/clock' %>
    <% end %> 
        <% end %> 
        </div>
    </div>
  </div>

<script>
$("showclock").html("<%= escape_javascript(render('products/unclock')) %>")
$("showclock").html("<%= escape_javascript(render('products/clock')) %>")
</script>




<div style="margin-left: 270px; position: absolute; width: 475px; border-radius: 10px; background-color: rgb(81, 81, 81); height: 180px; width: 630px;">
    <h4 style="font-size: 16px; text-align: center; margin-top: 18px; color: rgb(167, 205, 249);">Overview</h4>
    <p style="font-size: 14px; padding-left: 25px; padding-right: 25px; color: white;"> <%= @product.description %> </p>
</div>



<div style="padding-top: 1.5px; margin-top: 225px; width: 200px; height: 70px; text-align: center; border-radius: 10px; background-color: rgb(190, 255, 0); margin-left: 20px;">



  <h4 style="font-size: 14px; color: black">SHARE THIS PRODUCT!</h4>


<div class="fb-share-button" data-href="#{request.original_url}" data-layout="button"></div>


<a href="https://twitter.com/share" class="twitter-share-button" data-via="kijovo" data-count="none" data-hashtags="kijovokicks">Tweet</a>

<!-- Place this tag in your head or just before your close body tag. -->
<script src="https://apis.google.com/js/platform.js" async defer></script>

<!-- Place this tag where you want the +1 button to render. -->
<div class="g-plusone" data-size="medium" data-annotation="none"></div>


</div>
  
  <h5 style="padding-top: 11px; margin-top: 22px; width: 200px; height: 38px; text-align: center; border-radius: 10px; background-color: rgb(81, 81, 81);margin-left: 20px;"> Price <%= format_price(@product) %> </h5>

  <h5 style="padding-top: 11px; margin-top: 22px; width: 200px; height: 38px; text-align: center; border-radius: 10px; background-color: rgb(81, 81, 81);margin-left: 20px;"> <%= link_to 'Website', @product.website, :target => "_blank" %> </h5>



<html lang="en">
<head>
<meta charset="UTF-8">
<title>Picture Slider</title>

<style type="text/css">

.item{
    background: #333;    
    text-align: center;
height: 215px !important;
}
.carousel{
    margin-top: 20px;
    margin-left: auto;
    margin-right: auto;
}
.bs-example{
  margin: 20px;
}

.img{
  height: 100% !important;
}

h2{
    margin: 0;     
    color: #666;
    padding-top: 120px;
    font-size: 52px;
    font-family: "trebuchet ms", sans-serif;    
}

</style>
</head>



<body style="padding-bottom: 5px">
  <% if @product.picture? %> 
<div class="bs-example">
<div id="myCarousel" class="carousel slide" data-interval="10000" data-ride="carousel" style="width: 630px; position: absolute; top: 350px; margin-left: 250px; border-radius: 10px; height: 215px;">
      <!-- Carousel indicators -->

       <!-- Carousel items --> 
        <div class="carousel-inner">
          <% if @product.picture? %> 
            <div class="active item">
              <%= picture_for(@product) %> 
            </div>
          <% end %>

          <% if @product.picture1? %> 
            <div class="item">
              <%= picture1_for(@product) %> 
            </div>
          <% end %>

          <% if @product.picture2? %> 
            <div class="item">
              <%= picture2_for(@product) %>  
            </div>
          <% end %>

          <% if @product.picture3? %> 
            <div class="item">
              <%= picture3_for(@product) %>  
            </div>
          <% end %>

          <% if @product.picture4? %> 
            <div class="item">
              <%= picture4_for(@product) %>  
            </div>
          <% end %>

          <% if @product.picture5? %> 
            <div class="item">
              <%= picture5_for(@product) %>  
            </div>
          <% end %>

          <% if @product.picture6? %> 
            <div class="item">
              <%= picture6_for(@product) %>  
            </div>
          <% end %>

          <% if @product.picture7? %> 
            <div class="item">
              <%= picture7_for(@product) %>  
            </div>
          <% end %>

          <% if @product.picture8? %> 
            <div class="item">
              <%= picture8_for(@product) %>  
            </div>
          <% end %>

          <% if @product.picture9? %> 
            <div class="item">
              <%= picture9_for(@product) %>  
            </div>
          <% end %>
        </div>

        <!-- Carousel nav -->
        <a class="carousel-control left" href="#myCarousel" data-slide="prev" style="border-radius: 10px;">
            <span class="glyphicon glyphicon-chevron-left" style="padding-top: 15px;"></span>
        </a>
        <a class="carousel-control right" href="#myCarousel" data-slide="next" style="border-radius: 10px;">
            <span class="glyphicon glyphicon-chevron-right" style="padding-top: 15px;"></span>
        </a>
    </div>
</div>
</body>
</html>                                   


</div>

<% else %> 

<div class="bs-example">
<div id="myCarousel" class="carousel slide" data-interval="100000" data-ride="carousel" style="width: 630px; position: absolute; top: 350px; margin-left: 250px; border-radius: 10px; height: 215px;">
      <div class="carousel-inner" style="border-radius: 10px;height: 215px;">
            <div class="active item" style="border-radius: 10px">
                <h2 style="padding-top: 50px; margin-left: 80px; margin-right: 80px;">More Images Coming Soon</h2>
            </div>
        </div>
        <!-- Carousel nav -->
    </div>
</div>
</body>
</html> 

<% end %> 



