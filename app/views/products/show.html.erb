     <%= format_releasing_on(@product) %> - <span style="color: red; font-weight: 500;"> <%= format_releasing_on_remaining(@product) %> </span>  </div>
        <div class="thumbnail" style="position: absolute; border-radius: 50%;width: 170px; box-shadow: 0 0 0 5px rgb(81, 81, 81); margin-top: 5px;margin-left: 15px;"> 

       <img class="img-responsive"> <%= image_for(@product) %>
</div> 


<div id="showclock" style="position: absolute; padding-left:85px; padding-top: 188px; z-index: 3;"> 
    <% if current_user %>
    <% if @current_clock %> 
<% if @current_clock %> 
<%= button_to product_clock_path(@product, @current_clock), method: :delete do %>
   <i class="glyphicon glyphicon-time" style= "color:red;"> </i>
      <% end %> 
      <% end %> 
    <% else %>
<%= button_to product_clocks_path(@product) do %>
   <i class="glyphicon glyphicon-time" style= "color:white;"> </i>
    <% end %> 
    <% end %> 

      <% else %>
            <i class="glyphicon glyphicon-time" style="color:white;margin-left: 5px;"> </i>
        <% end %> 
        </div>
    </div>
  </div>



<div class="<%= 'browse-blur' unless @current_user %>" style="margin-left: 270px; position: absolute; width: 475px; border-radius: 10px; background-color: rgb(81, 81, 81); height: 180px; width: 630px;">
