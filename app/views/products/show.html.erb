<%= content_for(:title, @product.name) %> 

<article>

<br>

  <header>
    <h2 style="text-align: center;"><%= @product.name %></h2> 
    <p style="text-align: center;">
      <% if current_user_admin? %>
      <%= link_to "Edit", edit_product_path(@product) %>
      <% end %>
    </p>
  </header>

<br>

    <div class="container">
    <div class="row" style="text-align: center !important;">
      <div class="col-md-4 thumb">
        <a class="thumbnail" style="position: absolute; width: 300px; height: 260px"> 
        <img class="img-responsive"> <%= image_for(@product) %>
        <%= format_releasing_on(@product) %> - <%= format_releasing_on_remaining(@product) %> 
         </a>
     </div>
  </div>

<div style="padding-left: 400px; padding-right: 60px; position: absolute;">
  <h4 style="text-align: center; margin-top: 1px;">Overview</h4>
    <p style="font-size: 14px;"> <%= @product.description %> </p>
</div>

 <div style="margin-top: 300px;">
    <% if current_user %>
    <% if @current_clock %>
      <%= button_to "UnClock", product_clock_path(@product, @current_clock), method: :delete %>
    <% else %>
      <%= button_to "Clock", product_clocks_path(@product) %>
  <% end %>
<% end %>
  </div>

  <div style="margin-top: 10px">
  <h4>Price <%= format_price(@product) %> </h4>
</div>
  
  <h5 style="margin-top: 10px"> <%= link_to 'Website', @product.website %> </h5>

</article>