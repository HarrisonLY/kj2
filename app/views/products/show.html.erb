<%= content_for(:title, @product.name) %> 

<article>

<br>

  <header>
  <% if current_user_admin? %>
    <p style="text-align: center; width: 80%; margin-left: 9%;">
      <%= link_to "Edit", edit_product_path(@product) %>
    </p>
  <% end %>

    <h1 style="text-align: center; font-size: 18px; border: 1px solid; border-radius: 6px; height: 38px; width: 80%; padding-top: 9px; margin-left: 9%;"> <%= @product.name %></h1> 
  </header>

<br>

    <div class="container">
    <div class="row">
      <div class="col-md-4 thumb">
        <a class="thumbnail" style="position: absolute; width: 270px;"> 
        <img class="img-responsive"> <%= image_for(@product) %>
         </a>
     </div>
  </div>

<div style="margin-left: 310px; position: absolute; width: 475px; border: 1px solid; border-radius: 8px;">
    <h4 style="font-size: 16px; text-align: center; margin-top: 20px;">Overview</h4>
    <p style="font-size: 14px; padding-left: 25px; padding-right: 25px"> <%= @product.description %> </p>
</div>

 <div style="margin-top: 235px; width: 270px;">
     <%= format_releasing_on(@product) %> - <span style="color: red;"> <%= format_releasing_on_remaining(@product) %> </span>
    <% if current_user %>
    <% if @current_clock %> 
      <%= button_to "UnClock", product_clock_path(@product, @current_clock), method: :delete %>
    <% else %>
      <%= button_to "Clock", product_clocks_path(@product) %>
  <% end %>
<% end %>
  </div>

  <div style="padding-top: 1.5px; margin-top: 10px; width: 270px; height: 38px; text-align: center; border: 1px solid; border-radius: 6px;">
  <h4 style="font-size: 14px;">Price <%= format_price(@product) %> </h4>
</div>
  
  <h5 style="padding-top: 11px; margin-top: 10px; width: 270px; height: 38px; text-align: center; border: 1px solid; border-radius: 6px;"> <%= link_to 'Website', @product.website %> </h5>

</article>