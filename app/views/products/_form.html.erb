          <% if @product.picture5? %> 
              <%= picture5_for(@product) %> 
          <% end %>
      </li>
      <li>
          <%= f.label :picture6, "More Pictures (7)" %>
          <%= f.file_field :picture6 %> 
          <% if @product.picture6? %> 
              <%= picture6_for(@product) %> 
          <% end %>
      </li>
