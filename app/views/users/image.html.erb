<%= content_for(:title, @user.first_name) %>

<article id="user" >
  <header>
     <h1 style="text-align: center;"> My Timecard </h1>
  </header>


<h4 style="text-align: center;color: #428bca; font-size: 15px;">Products I've Clocked ( <%= @current_user.clocked_products.size %> ) </h4>


<div style="margin-right: 0px; margin-left: 0px; margin-top: 20px;">
<div class="span12 centered-pills">
<ul class="nav nav-pills" role="tablist">
  <li style=""> <%= link_to 'List View', user_path, :class => "user-nav" %></li>
  <li class="active" style="margin-left: 15px;"> <%= link_to 'Image View', users_image_path, :class => "user-nav" %></li>
</ul>
</div>
</div>

<% if @current_user.clocked_products.size < 1 %>

<br>

  <h1 style="text-align: center;"> What are you waiting for?! </h1> 
  <a href="/products/filter/trending" style= "text-align: center; width: 100%"><h1 style="color: lightgreen; text-align: center;"> Go Clock Some Upcoming Products! </h1></a>

<% else %>



<div style="height: 22px; width: 315px; background-color: rgb(86, 86, 86); position: absolute;border-radius: 4px;margin-left: auto;margin-right: auto;left: 0;right: 0;margin-top: 1px; ">
 <p style="padd1ing-top: 1px; color: white; text-align: center;"> SORT </p>
</div>


<div class="row" style="margin-right: 0px; margin-left: 0px;">
<div class="span12 centered-pills">  
<nav style="padding-top: 30px;"> 
<ul class="nav nav-pills">
  <li class="<%= 'active' if current_page?(users_image_path(:future)) %>" style="margin-left: 6px; margin-right: 6px; background-color: rgb(86, 86, 86);"> <a href="/users/image/<%= @current_user.id %>/future"style=" width: 100px; height: 45px; padding-top:3px;color: white;">Releasing Soon</a></li>
  <li class="<%= 'active' if current_page?(users_image_path(:before)) %>" style="background-color: rgb(86, 86, 86);"> <a href="/users/image/<%= @current_user.id %>/before"style=" width: 100px; height: 45px; padding-top:3px;color: white;">Just Released</a></li>
  <li class="<%= 'active' if current_page?(users_image_path(:unknown)) %>" style="margin-left: 7px; margin-right: 6px; background-color: rgb(86, 86, 86);"> <a href="/users/image/<%= @current_user.id %>/unknown"style=" width: 100px; height: 45px; padding-top:12.5px;color: white;">TBA</a></li>
</ul>
</nav> 
</div>
</div>


<div class="container" style="text-align: center;padding-left: 75px;padding-right: 75px; border-left: 1px dashed white; border-right: 1px dashed white; border-radius: 20px;">
  <div class="row" style="padding-top: 30px; ">
  <% @clocked_products.each do |product| %> 
  <% if @current_user.clocks.find_by(product_id: product.id) %> 
     <div class="col-lg-3 col-md-3 col-sm-4 col-xs-6 thumb" style="margin-bottom: 8.5%; height: 170px;">

<%= link_to product do %>
     <div class="thumbnail" style="margin-bottom: 0px;">  
       <%= image_for(product) %>
        <div class="unit-caption"> 
        <h2 style="font-size:18px; padding-top: 9px; color:white"> <%= product.name.upcase %> </h2>
         <p style="font-size:15px; color:white"> <%= format_price(product) %> </p>
        </div> 

     </div>
        <div style="font-size: 17px; padding-top: 11px; height: 43px; border-radius: 20px; background-color: rgb(167, 205, 249);color: black; text-align: center; position: absolute; z-index: 2; margin-top: 132px; width: 190px; top: 0; left: 0;right: 0;margin-left: auto;margin-right: auto;">
             <%= format_releasing_on(product) %> - <span style="color: red; font-weight: 500;"><%= format_releasing_on_remaining(product) %> </span>  </div>
   <% end %>
            <div style="position: absolute; padding-left: 41.3%; padding-top: 12px;">
            <% if current_user %>
              <% if current_user.clocks.find_by(product_id: product.id) %>
              <%= button_to product_clock_path(product, @current_user.clocks.find_by(product_id: product.id)), method: :delete do %>
             <i class="glyphicon glyphicon-time" style= "color:red;"> </i>
              <% end %> 
            <% else %>
              <%= button_to product_clocks_path(product) do %>  
            <i class="glyphicon glyphicon-time" style= "color:white;"> </i>
              <% end %> 
              <% end %>
            <% end %>
          </div> 
  </div>
<% end %>

   <% end %>
   <% end %>
