<%= content_for(:title, @user.first_name) %>

<article id="user">
  <header>
     <h1 style="text-align: center;"> My Timecard </h1>
  </header>

<% @clocked_products %>
<h4 style="text-align: center;color: red;font-size: 15px;">Products I've Clocked ( <%= @clocked_products.size %> ) </h4>

<div class="row" style="
    margin-right: 0px;
    margin-left: 0px;
    margin-top: 20px;
">
<div class="span12 centered-pills">  
<nav> 
<ul class="nav nav-pills" role="tablist">

  <li><%= link_to 'List View', user_path %></li>
  <li><%= link_to 'Image View', users_image_path %></li>

</ul>
</nav> 
</div>
</div>





<div class="container" style="text-align: center;padding-left: 75px;padding-right: 75px;">
    <div class="row" style="padding-top:20px; ">
   <% @clocked_products.each do |product| %>
     <div class="col-lg-3 col-md-4 col-xs-6 thumb" style="padding-bottom: 3%;height: 302px;">
       <span style="text-align: center !important;"> <%= link_to(product.name, product_path(product)) %> </span> 

        <%= link_to product do %>
         <div class="thumbnail" style="margin-bottom: 0px;"> 
          <img class="img-responsive"> <%= image_for(product) %> 
         </div>
        <% end %>

          <div style="position: absolute; padding-left: 80%; padding-top: 10px;">
            <% if @current_user.clocks.find_by(product_id: product.id) %> 
            <%= button_to product_clock_path(product, @current_user.clocks.find_by(product_id: product.id)), method: :delete do %> 
             <i class="glyphicon glyphicon-time" style= "color:red;"> </i>
          <% end %>           
          <% end %> 
          </div> 

         <div style="font-size: 17px; padding-left: 10%; padding-top: 13px;  height: 45px; text-align: left; border-bottom-left-radius: 10px; border-bottom-right-radius: 10px; background-color: rgb(115, 145, 192);color: white;">
             <%= format_releasing_on(product) %> - <span  style="color: black;"><%= format_releasing_on_remaining(product) %> </span> 
        </div>

     </div>
    <% end %>
  </div>