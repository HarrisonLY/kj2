<% @clocked_products.each do |product| %> 
  <% if @current_user.clocks.find_by(product_id: product.id) %> 
     <div class="col-lg-3 thumb" style="margin-bottom: 8.5%;">

<%= link_to product do %>
     <div class="thumbnail" style="margin-bottom: 0px; height: 43px; width: 43px;">  
       <%= image_for(product) %>

     </div>


        <div style="font-size: 17px; padding-top: 11px; height: 43px; border-radius: 10px; background-color: rgb(87, 87, 87);color: black;  position: absolute; z-index: 2; width: 440px; top: 0;left: 90px;text-align: left; padding-left: 20px; color: white"> <%= product.name.truncate(36) %> 
        </div>

        <div style="font-size: 17px; padding-top: 11px; height: 43px; border-radius: 10px; background-color: rgb(167, 205, 249);color: black; text-align: center; position: absolute; z-index: 2; width: 190px; top: 0;left: 450px;">
             <%= format_releasing_on(product) %> - <span style="color: red; font-weight: 500;"><%= format_releasing_on_remaining(product) %> </span>  
        </div>

   <% end %>
            <div style="position: absolute; padding-left: 640px; padding-top: 6px;">
            <% if current_user %>
              <% if current_user.clocks.find_by(product_id: product.id) %>
              <%= button_to product_clock_path(product, @current_user.clocks.find_by(product_id: product.id)), method: :delete do %>
             <i class="glyphicon glyphicon-time" style= "color:red;"> </i>
              <% end %> 
            <% else %>
              <%= button_to product_clocks_path(product) do %>  
            <i class="glyphicon glyphicon-time" style= "color:white;"> </i>
              <% end %> 
              <% end %>
            <% end %>
          </div> 


  </div>
<% end %>

<% end %>



