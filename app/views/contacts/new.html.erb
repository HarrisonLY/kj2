<div class="container">
  <div class="row">
   <div style="border:1px solid black; height: 300px; width: 70%; margin-top:20px; border-bottom-left-radius: 10px; border-bottom-right-radius: 10px; margin-right:auto; margin-left:auto">
         <%= simple_form_for @contact, :html => {:class => 'form-horizontal' } do |f| %>
          <fieldset>
            <div class="text-center" style="font-size: 18px; margin-top: 12px">Please submit your comments, questions, or concerns below.
            </div>


            <!-- Name input-->
            <div class="form-group" style="padding-left: 10%; padding-right: 10%; margin-top: 12px">
                 <%= f.input :name, :required => true, :placeholder => "Name", autofocus: true, label: false %>
            </div>

            <!-- Email input-->
            <div class="form-group" style="padding-left: 10%; padding-right: 10%;">
                <%= f.input :email, :required => true, :placeholder => "Email", label: false %>
            </div>
    
            <!-- Message body -->
            <div class="form-group" style="padding-left: 10%; padding-right: 10%;">
                <%= f.input :message, :as => :text, :required => true, :placeholder => "Message", label: false %>
            </div>
  
            <!-- Form actions -->
            <div class="form-group" style="padding-left: 10%; padding-right: 10%;">
                <%= f.button :submit, 'Send message' %>
            </div>
              <br>
            <div class="text-center">You can also reach out to us by emailing <a href="mailto:info@kijovo.com">info@kijovo.com</a> 
          </fieldset>


            </div>
          </form>
        </div>
  <% end %>
  </div>
</div>



