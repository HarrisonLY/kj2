<br>
<div class="container">
  <div class="row">
        <div class="well well-sm" style="width: 80%; margin-left: 10%; height: 338px;">
         <%= simple_form_for @contact, :html => {:class => 'form-horizontal' } do |f| %>
          <fieldset>
            <legend class="text-center" style="font-size: 16px;">How Can We Help You? </legend>


            <!-- Name input-->
            <div class="form-group" style="padding-left: 5%; padding-right: 5%;">
                 <%= f.input :name, :required => true, :placeholder => "Name", autofocus: true, label: false %>
            </div>

            <!-- Email input-->
            <div class="form-group" style="padding-left: 5%; padding-right: 5%;">
                <%= f.input :email, :required => true, :placeholder => "Email", label: false %>
            </div>
    
            <!-- Message body -->
            <div class="form-group" style="padding-left: 5%; padding-right: 5%;">
                <%= f.input :message, :as => :text, :required => true, :placeholder => "Message", label: false %>
            </div>
  
            <!-- Form actions -->
            <div class="form-group" style="padding-left: 5%">
                <%= f.button :submit, 'Send message', :class=> "btn btn-primary" %>
            </div>


          </fieldset>
          </form>
        </div>
  <% end %>
  </div>
</div>


<p class="text-center">You can also reach out to us by emailing <a href="mailto:info@kijovo.com">info@kijovo.com</a> </p>

 <%
=begin %>

            <!-- Name input-->
            <div class="form-group" style="padding-left: 5%; padding-right: 5%;">
            <%= f.input :name, :required => true, label: false do %>
                <input id="name" name="name" type="text" placeholder="Your name" class="form-control">
            <% end  %>
            </div>

            <!-- Email input-->
            <div class="form-group" style="padding-left: 5%; padding-right: 5%;">
