<%= form_for(@category) do |f| %>
  <%= render "shared/errors", object: @category %>

  <fieldset>
    <ol>
      <li class="required">
          <%= f.label :name %><br/>
          <%= f.text_field :name, autofocus: true %>
      </li>
    </ol>
    <p>
      <%= f.submit %>
      <%= link_to "Cancel", categories_path %>
    </p>
  </fieldset>
<% end %>